<form name="frmRegistroProveedor" action="#" method="post" data-table="LOG.PROVEEDORES" data-condition="@ViewBag.Condition" data-setUpdate="1" autocomplete="off">
    <div class="row">
        <div class="col-md-12">
            <a id="btnSalir" href="@Url.Action("Proveedores","Mantenimiento")" class="btn btn-gray btn-sm"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Regresar</a>
            <button type="button" id="btnGuardar" class="btn btn-danger btn-sm pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Guardar</button>
        </div>
    </div>
    <hr />
    <ul class="nav nav-tabs" id="myTabRoles" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="general-tab" data-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">Datos Generales</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="contacto-tab" data-toggle="tab" href="#contacto" role="tab" aria-controls="contacto" aria-selected="false">Contactos</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="cuenta-bancaria-tab" data-toggle="tab" href="#cuenta-bancaria" role="tab" aria-controls="cuenta-bancaria" aria-selected="false">Cuentas de Abono</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContentRoles" style="min-height: 650px;">
        <div class="tab-pane fade show active" id="general" role="tabpanel" aria-labelledby="general-tab">
            <div class="clearfix">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <div class="row mb-3">

                        <div class="col-md-2 col-sm-2 col-xs-3">
                            <span class="help-block text-muted small-font"> Tipo de documento</span>
                            <select id="C_PARAMETRO_GENERAL_TIPO_DOCUMENTO_CLIENTE" name="C_PARAMETRO_GENERAL_TIPO_DOCUMENTO" class="form-control form-control-sm" data-query="q_movil_ventas_clientes_obtenertipodoc" data-value="C_PARAMETRO_GENERAL" data-field="DESCRIPCION_PARAMETRO" data-tipoParametro="Tipos de Documentos" required></select>
                            <input type="hidden" id="C_PARAMETRO_GENERAL_TIPO_DOCUMENTO_CLIENTE_VALIDADOR">
                        </div>
                        <div class="col-md-2 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Nro de documento</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="text" id="RUC_CLIENTE" class="form-control form-control-sm shadow-none" autocomplete="off" name="RUC_CLIENTE" required />
                                <input type="hidden" id="RUC_CLIENTE_VALIDADOR">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-3 col-xs-3">
                            <span class="help-block text-muted small-font"> Razón social</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="text" id="RAZON_SOCIAL" class="form-control form-control-sm shadow-none" autocomplete="off" name="RAZON_SOCIAL" required />
                                <input type="hidden" id="RAZON_SOCIAL_VALIDADOR">
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font"> Dirección fiscal</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="text" id="DIRECCION_FISCAL" class="form-control form-control-sm shadow-none" autocomplete="off" name="DIRECCION_FISCAL" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 col-sm-4 col-xs-6">
                            <span class="help-block text-muted small-font"> Procedencia</span>
                            <div class="p-0">
                                <select id="C_PARAMETRO_GENERAL_PROCEDENCIA" name="C_PARAMETRO_GENERAL_PROCEDENCIA" class="form-control form-control-sm" data-query="gbl_obtener_parametro_general" data-value="CODIGO" data-field="DESCRIPCION" data-tipoParametro="Procedencia Producto Venta" required></select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6" style="display:none;" id="bloque_nombre_comercial">
                            <span class="help-block text-muted small-font"> Nombre Comercial</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="text" id="NOMBRE_COMERCIAL" class="form-control form-control-sm shadow-none" autocomplete="off" name="NOMBRE_COMERCIAL" />
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Teléfono</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="text" id="TELEFONO" name="TELEFONO" class="form-control form-control-sm shadow-none" autocomplete="off" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Correo de comunicación</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <input type="email" class="form-control form-control-sm shadow-none" id="CORREO_FACTURACION" autocomplete="off" name="CORREO_FACTURACION" required />
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Estado</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <select class="form-control form-control-sm shadow-none" name="IND_ESTADO">
                                    <option value="*">Activo</option>
                                    <option value="&">Inactivo</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Departamento</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <select name="DEPARTAMENTO_REF" id="DEPARTAMENTO_REF" class="form-control form-control-sm" data-nosend="1"
                                        data-query="gbl_obtener_parametro_general" data-value="DESCRIPCION" data-field="DESCRIPCION" data-tipoparametro="Departamento"></select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Provincia</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <select name="PROVINCIA_REF" id="PROVINCIA_REF" class="form-control form-control-sm" data-nosend="1"></select>
                            </div>
                        </div>
                        <div class="col-md-4 col-sm-6 col-xs-6">
                            <span class="help-block text-muted small-font">Distrito</span>
                            <div class="input-floating-label text-blue-d1 brc-blue-m1">
                                <select name="DISTRITO_REF" id="DISTRITO_REF" class="form-control form-control-sm" data-nosend="1"></select>
                            </div>
                        </div>
                    </div>

                    <input type="hidden" id="DEPARTAMENTO" name="DEPARTAMENTO" value="" />
                    <input type="hidden" id="PROVINCIA" name="PROVINCIA" value="" />
                    <input type="hidden" id="DISTRITO" name="DISTRITO" value="" />
                    <input type="hidden" id="C_PROVEEDOR" name="C_PROVEEDOR" value="" />
                    <input type="hidden" id="CREAR" value="@ViewBag.Crear" />
                    <input type="hidden" id="CONDITION" value="@ViewBag.Condition" />
                    <input type="hidden" id="DUPLICADO" value="@ViewBag.Duplicado" />
                    <input type="hidden" id="VALIDADOR" value="Si" />
                    <input type="hidden" id="C_EMPRESA" name="C_EMPRESA" value="" />
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="contacto" role="tabpanel" aria-labelledby="contacto-tab">
            <div class="clearfix">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-sm btn-add-contact"><i class="fa fa-plus-circle" aria-hidden="true"></i> Agregar Contacto</button>
                    <div id="tblContacto" style="margin-top:5px;"></div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="cuenta-bancaria" role="tabpanel" aria-labelledby="cuenta-bancaria-tab">
            <div class="clearfix">&nbsp;</div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" class="btn btn-primary btn-sm btn-add-cuenta-bancaria"><i class="fa fa-plus-circle" aria-hidden="true"></i> Agregar Cuenta</button>
                    <div id="tblCuentaBancaria" style="margin-top:5px;"></div>
                </div>
            </div>
        </div>
    </div>
</form>