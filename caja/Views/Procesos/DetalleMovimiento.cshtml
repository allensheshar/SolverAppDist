<form name="frmFiltro">
    <div class="row">
        <div class="col-3">
            <div class="form-group-rm">
                <select class="form-control form-control-sm" id="_persona" name="_persona" data-textDefault="-- Seleccione --"
                        data-live-search="true" data-style="btn-light" data-size="10"></select>
            </div>
        </div>
        <div class="col-3">
            <div class="form-group-rm">
                <input type="text" class="form-control form-control-sm" id="_buscar" name="_buscar" placeholder="Ingrese aquí su búsqueda..." autocomplete="off">
            </div>
        </div>
        <div class="col-auto">
            <div class="form-group-rm">
                <button id="buscar" type="submit" class="btn btn-sm btn-gray btn-block btn-filter" data-nosend="1"><i class="fa fa-search-plus" aria-hidden="true"></i>&nbsp;Buscar</button>
            </div>
        </div>
        <div class="col">
            <span id="monto" class="float-right" style="font-size:20px;"></span>
        </div>
    </div>
</form>
<div class="row mt-2">
    <div class="col">
        <div id="tblDocumento"></div>
    </div>
</div>

<div class="row mt-2">
    <div class="col">
        <button type="button" class="float-right btn btn-sm btn-danger" id="btnAceptar"><i class="fa fa-floppy-o" aria-hidden="true"></i>&nbsp;Aceptar</button>
    </div>
</div>