    .bs-placeholder {
        color: #495057;
        background-color: #fff;
        border: 1px solid #ced4da;
        background-clip: padding-box;
        font-size: .875rem;
        font-weight: 400 !important;
        font-family: sans-serif !important;
    }

    .filter-option-inner-inner {
        color: #495057;
