<form name="frmBusquedaProducto" method="post" onsubmit="return false;" autocomplete="off">
    
    <div class="col-md-12">
        <div class="modal-body row mt-0">
            <div class="col-md-12">
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="col-form-label col-form-label-lg float-right">Producto:</label>
                    </div>
                    <div class="col-md-10">
                        <select name="PRODUCTO" id="PRODUCTO" class="form-control form-control-lg" data-live-search="true" data-style="btn-light" data-size="5"
                                data-textdefault="--Seleccione--" required></select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="col-form-label col-form-label-lg float-right">Descripción:</label>
                    </div>
                    <div class="col-md-10">
                        <input type="text" class="form-control form-control-lg" id="DESCRIPCION" name="DESCRIPCION" placeholder="Ingrese descripción" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-2">
                        <label class="col-form-label col-form-label-lg float-right">Cantidad:</label>
                    </div>
                    <div class="col-md-4">
                        <input type="number" name="CANTIDAD" id="CANTIDAD" placeholder="Ingrese Cantidad" autocomplete="off" class="form-control form-control-lg number-input" />
                    </div>
                    <div class="col-md-2">
                        <label class="col-form-label col-form-label-lg float-right">Centro de costo:</label>
                    </div>
                    <div class="col-md-4">
                        <select name="CENTRO_COSTO" class="form-control form-control-lg"
                                data-textdefault="--Seleccione--" required></select>
                    </div>
                </div>
            </div>
            <div class="col-md-12 mt-2">
                <div class="row">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <button type="button" class="btn btn-sm btn-danger float-right" id="btnGuardar">
                            <i class="fa fa-floppy-o text-110 mr-1"></i>Guardar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>