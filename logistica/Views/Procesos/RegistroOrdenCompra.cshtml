
<div class="row">
    <div class="col-12">
        <div class="card pt-0">
            <div class="card card-default">
                <div class="card-body p-2">
                    <div style="padding-bottom: 0.4em;">
                        <form name="frmOrdenCompras" onsubmit="return false;">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="form-group-rm">
                                        <label>Desde</label>
                                        <input type="text" class="form-control form-control-sm _desde" id="_desde" value="@DateTime.Now.AddDays(-7).ToString("dd-MM-yyyy")" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group-rm">
                                        <label>Hasta</label>
                                        <input type="text" class="form-control form-control-sm _hasta" id="_hasta" value="@DateTime.Now.ToString("dd-MM-yyyy")" />
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group-rm">
                                        <label>Proveedor</label>
                                        <select id="_proveedor" class="form-control form-control-sm c_empresa" data-query="cb_ventas_procesos_filtrocompras_listarproveedores" data-value="C_PROVEEDOR" data-field="RAZON_SOCIAL" data-c_empresa="" data-textDefault="-- Todos --"></select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group-rm">
                                        <label>Tipo de transacción</label>
                                        <select id="_tipo" class="form-control form-control-sm" data-query="gbl_obtener_parametro_general" data-tipoparametro="Código tipo de transacción orden compra"  data-value="CODIGO" data-field="DESCRIPCION" data-textDefault="-- Todos --"></select>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div class="form-group-rm">
                                        <label>Almacen</label>
                                        <select id="_almacen" class="form-control form-control-sm c_empresa" data-query="q_logistica_procesos_nuevaordencompra_listaalmacenes" data-value="C_ALMACEN" data-field="NOMBRE_ALMACEN" data-textDefault="-- Todos --" data-empresa=""></select>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-md-2">
                                    <div class="form-group-rm">
                                        <label>Estado</label>
                                        <select id="_estado" class="form-control form-control-sm c_empresa">
                                            <option value="">-- Todos --</option>
                                            <option value="*">Pendiente</option>
                                            <option value="H">Heredada</option>
                                            <option value="E">Enviada al Proveedor</option>
                                            <option value="R">Rechazada</option>
                                            <option value="O">Observada</option>
                                            <option value="M">Modificada</option>
                                            <option value="A">Aprobada</option>
                                            <option value="&">Anulada</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="form-group-rm">
                                        <label>N° comprobante</label>
                                        <input type="text" class="form-control form-control-sm" id="_buscar" />
                                    </div>
                                </div>
                                <div class="form-group-rm">
                                    <label for="exampleFormControlSelect1">&nbsp;</label>
                                    <button type="submit" class="btn btn-sm btn-gray btn-block btn-filter"><i class="fa fa-search-plus" aria-hidden="true"></i> Buscar</button>
                                </div>
                                <div class="col-md-auto">
                                    <label for="exampleFormControlSelect1">&nbsp;</label>
                                    <div class="dropdown">
                                        <button class="btn btn-orange btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Acciones</button>
                                        <div class="dropdown-menu dropdown-caret" style="">
                                            <a id="btnNueva" class="dropdown-item" href="#"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Nueva</a>
                                            <a id="btnEditar" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-pencil-square-o" aria-hidden="true"></i>&nbsp;Editar</a>
                                            <a id="btnReprocesarPdf" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-file-pdf-o" aria-hidden="true"></i>&nbsp;Reprocesar PDF</a>
                                            <a id="btnEnviar" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-paper-plane" aria-hidden="true"></i>&nbsp;Enviar</a>
                                            <a id="btnAprobar" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-check" aria-hidden="true"></i>&nbsp;Aprobar</a>
                                            <a id="btnDuplicar" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-files-o" aria-hidden="true"></i>&nbsp;Duplicar</a>
                                            <a id="btnAnular" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-times" aria-hidden="true"></i>&nbsp;Anular</a>
                                            @*<a id="btnDescargar" class="dropdown-item" href="#" style="display:none;"><i class="fa fa-download" aria-hidden="true"></i>&nbsp;Descargar</a>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 col-md-12">
                                    <span class="float-right text-info" id="estados"></span>
                                </div>
                            </div>
                        </form>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div id="tblOrdenCompra" style="position:relative; z-index:0;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>