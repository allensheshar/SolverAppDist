<div class="row justify-content-center">
    <div class="col-6 body-login-form">
        <div class="box">
            <div class="parent-form p-4 shadow-lg animated fadeIn">

                <form name="frmRecuperarClave" class="form-row animated fadeInRight p-5 rounded border">

                    <div class="row col-md-12 d-flex justify-content-center">

                        <!-- Account details card-->
                        <div class="card mb-4 ml-4" style="width:100%;">
                            <div class="card-header">Datos Personales</div>
                            <div class="card-body">

                                <!-- Form Group (username)-->
                                <div class="form-group">
                                    <label>Nombre de Usuario</label>
                                    <input class="form-control" id="C_USUARIO" type="text">
                                </div>

                                <!-- Save changes button-->
                                <div class="form-group">
                                    <label>Contraseña Nueva</label>
                                    <input class="form-control" id="PASSWORD_NEW" type="password">
                                </div>
                                <div class="form-group">
                                    <label>Confirmar Contraseña Nueva</label>
                                    <input class="form-control" id="PASSWORD_NEW_CONFIRMAR" type="password">
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("Logout","Cuenta")" class="btn btn-danger btn-sm"><i class="fa fa-undo" aria-hidden="true"></i> SALIR</a>
                                    <button type="button" id="btnActualizar" class="btn btn-primary btn-sm pull-right"><i class="fa fa-floppy-o" aria-hidden="true"></i> Actualizar Datos</button>
                                </div>

                            </div>
                        </div>

                    </div>

                </form>

            </div>
        </div>
    </div>
</div>